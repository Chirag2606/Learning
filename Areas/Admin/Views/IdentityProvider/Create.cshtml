@{
    ViewBag.Title = Html.Resource("Title");
}
@using Cyara.Shared.Web.Extensions
@using Cyara.Web.Common.Extensions
@using Cyara.Web.Portal.Core.SiteMap
@using MvcSiteMapProvider.Web.Html
@model Cyara.Web.Portal.Areas.Admin.Models.IdentityProvider.IdentityProviderViewModel

@section PageHead
{
    @Html.PageHeader(Html.Resource("PageHead"))
}

@section PageHeadRight
{
}

@section Breadcrumbs
{
    @Html.MvcSiteMap().GenerateBreadcrumbs(new[] { Url.Action("Index"), Url.Action("Create") })
}

@section PageContent
{
    <div class="overlap">
        <div class="form">
            @using (Html.BeginForm("create", "IdentityProvider", null, FormMethod.Post, new { id = "createidp" }))
            {
                @Html.AntiForgeryToken()

                @Html.EditorForModel()
                
                <div class="form-actions">
                    @Html.ErrorPanel(Model.Message)
                    <button type="submit" class="btn btn-primary btn-submit">@Html.GlobalResource("SaveDetails")</button>
                    @Html.ActionLink(Html.GlobalResource("Cancel"), "index", "IdentityProvider", new { @class = "btn btn-cancel" })
                </div>
            }
        </div>
    </div>
    <script type="text/javascript">
        $(function() {
            var dirtyHandler = new DirtyPageHandler({ form: '#createidp' });
        });
    </script>
}